{
  "manifest_version": 3,
  "name": "GitInsight",
  "version": "1.1.0",
  "description": "Instant GitHub repository analytics. Get key metrics on project health, community engagement, and code statistics at a glance.",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://api.github.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
